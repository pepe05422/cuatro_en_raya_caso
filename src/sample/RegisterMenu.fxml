<GridPane alignment="CENTER" hgap="15.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="600.0" prefWidth="700.0" vgap="15.0" xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RegisterMenu">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="30.0" minWidth="10.0" prefWidth="30.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="30.0" minWidth="30.0" prefWidth="30.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="250.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" text="CONECTA 4">
            <font>
                <Font name="Liberation Sans" size="30.0"/>
            </font>
        </Label>
    </VBox>
    <VBox id="formularioDeInicioDeSesion" fx:id="formularioInicioDeSesion" alignment="CENTER" maxWidth="550.0"
          prefHeight="0.0" prefWidth="250.0" spacing="15.0" visible="false" GridPane.columnIndex="1"
          GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <padding>
            <Insets left="50.0" right="50.0" top="30.0"/>
        </padding>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <TextField fx:id="usuarioInicioSesion" alignment="CENTER" maxWidth="350.0" prefHeight="0.0"
                       prefWidth="250.0" promptText="Usuario"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
            <TextField fx:id="contrasenaInicioSesion" alignment="CENTER" maxWidth="350.0" prefHeight="0.0"
                       prefWidth="250.0" promptText="Contraseña"/>
        </HBox>
        <TextFlow fx:id="recuperarContrasena" prefHeight="10.0" prefWidth="200.0" textAlignment="CENTER"/>
        <Label fx:id="mensajeDeErrorDeInicioDeSesion" alignment="CENTER" contentDisplay="CENTER" maxHeight="80.0"
               maxWidth="-Infinity" prefHeight="80.0" prefWidth="400.0" textAlignment="CENTER" textFill="RED"/>
    </VBox>
    <VBox id="formularioDeRegistro" fx:id="formularioRegistro" alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
          GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <TextField fx:id="usuarioRegistro" alignment="CENTER" maxWidth="350.0" prefHeight="0.0" prefWidth="250.0"
                       promptText="Usuario"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <TextField fx:id="contrasenaRegistro" alignment="CENTER" maxWidth="350.0" prefHeight="0.0" prefWidth="250.0"
                       promptText="Contraseña"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <TextField fx:id="correoRegistro" alignment="CENTER" maxWidth="350.0" prefHeight="0.0" prefWidth="250.0"
                       promptText="Correo electronico"/>
        </HBox>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
            <DatePicker fx:id="fechaNacimientoRegistro" promptText="Fecha de nacimiento" showWeekNumbers="true"/>
        </HBox>
        <ImageView fx:id="ImgVwavatar" fitHeight="100.0" fitWidth="100.0" onMouseClicked="#cargarImagenLocal"
                   pickOnBounds="true" preserveRatio="true">
            <viewport>
                <Rectangle2D/>
            </viewport>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
            <effect>
                <DropShadow/>
            </effect>
        </ImageView>
        <Label fx:id="mensajeDeErrorDeRegistro" textAlignment="CENTER" textFill="RED">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
    </VBox>
    <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <Button mnemonicParsing="false" onAction="#InicioSesion" text="Iniciar Sesion"/>
            <Button mnemonicParsing="false" onAction="#Registro" text="Registrarse"/>
        </HBox>
    </VBox>
</GridPane>
